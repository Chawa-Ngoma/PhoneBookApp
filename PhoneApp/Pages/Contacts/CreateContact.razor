@page "/Contacts/CreateContact"

<EditForm Model="_internalContactModel" OnValidSubmit="@HandleValidSubmit">
    <DataAnnotationsValidator />
    <ValidationSummary />

    @if (!string.IsNullOrWhiteSpace(_errorMessage))
    {
        <div class="alert alert-danger">@_errorMessage</div>
    }

    <div class="row">
        <div class="col-lg-8">
            <h1 class="mb-5">New Contact</h1>
        </div>

        <div class="row mb-3">
            <label class="col-md-4 col-form-label">First Name</label>
            <div class="col-md-8">
                <InputText class="form-control" @bind-Value="_internalContactModel.Name"/>
                <ValidationMessage For="@(() => _internalContactModel.Name)"/>
            </div>
        </div>

        <div class="row mb-3">
            <label class="col-md-4 col-form-label">Phone Number</label>
            <div class="col-md-8">
                <InputText class="form-control" @bind-Value="_internalContactModel.PhoneNumber" />
                <ValidationMessage For="@(() => _internalContactModel.PhoneNumber)" />
            </div>
        </div>

        <div class="row mb-3">
            <label class="col-md-4 col-form-label">Email</label>
            <div class="col-md-8">
                <InputText class="form-control" @bind-Value="_internalContactModel.EmailAddress" />
                <ValidationMessage For="@(() => _internalContactModel.EmailAddress)" />
            </div>
        </div>

        <div class="row">
            <div class="offset-md-4 col-md-4 d-grid">
                <button type="submit" class="btn btn-outline-success">Save Contact</button>
            </div>
            <div class="col-md-4 d-grid">
                <button class="btn btn-outline-warning" @onclick="Cancel">Cancel</button>
            </div>
        </div>

    </div>
</EditForm>
