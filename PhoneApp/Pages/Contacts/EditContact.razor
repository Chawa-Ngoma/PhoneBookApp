@page "/Contacts/EditContact/{Id:int}"

@if (!string.IsNullOrWhiteSpace(_apiErrorMessage))
{
    <div class="alert alert-danger">@_apiErrorMessage</div>
}

<div class="row">
    <div class="col-lg-8">
        <h1 class="mb-5">Edit Contact</h1>

        @if (_contacts == null)
        {
            <p>Loading...</p>
        }
        else
        {
            <div class="row mb-3">
                <label class="col-md-4 col-form-label">Name</label>
                <div class="col-md-8">
                    <input class="form-control" @bind="_internalContactModel.Name" />
                    <span class="text-danger">@_errors["Name"]?[0]</span>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-md-4 col-form-label">Phone Number</label>
                <div class="col-md-8">
                    <input class="form-control" @bind="_internalContactModel.PhoneNumber" />
                    <span class="text-danger">@_errors["PhoneNumber"]?[0]</span>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-md-4 col-form-label">Email</label>
                <div class="col-md-8">
                    <input class="form-control" @bind="_internalContactModel.EmailAddress" />
                    <span class="text-danger">@_errors["EmailAddress"]?[0]</span>
                </div>
            </div>

            

            <div class="row">
                <div class="offset-md-4 col-md-4 d-grid">
                    <button class="btn btn-primary" @onclick="SaveContact">Submit</button>
                </div>
                <div class="col-md-4 d-grid">
                    <button class="btn btn-outline-primary" @onclick="Cancel">Cancel</button>
                </div>
            </div>
        }
    </div>
</div>
